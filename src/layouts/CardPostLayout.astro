---
const {title, img, description, date, link} = Astro.props
---
<style>
    .card_post{
        width: 100%;
        display: flex;
        margin-top: 20px;
        & img{
            width: 300px;
            border-radius: 5px;
        }
        & div{
            margin-left: 20px;
            font-family: Arial, Helvetica, sans-serif;
            & h2 {
                font-size: 40px;
                margin-bottom: 16px;
                a{
                    color: gray;
                    text-decoration: none;
                }
            }
        }
    }
</style>
<div class="card_post">
    <img src={img} alt='img'>
    <div>
        <h2><a href={link}>{title}</a></h2>
        <strong>{description}</strong>
        <p>{date}</>
    </div>
</div>